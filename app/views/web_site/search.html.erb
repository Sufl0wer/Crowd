<h4 class="text text-center">Search results for "<%= params[:search] %>"</h4>

<div class="search-heading">
  <a class="font-weight-bold">Current search parameter was found in companies below</a>
</div>

<% @search_results.each do |company| %>
  <div class="border-bottom search-company">
    <%= link_to company.name, company, { style: 'color: black;', class: "link" } %>
  </div>
<% end %>
