<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<h1>Companies</h1>

<% @companies.each do |company| %>
  <div>
    <%= link_to company.name, company, { style: 'color: black;', class: "link" } %>
    <% if company.user == current_user %>
      <%= link_to 'Edit', edit_company_path(company) %>
      <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>

<br>

<form action="companies/new" method="get">
  <button class="btn btn-primary">Register your own company</button>
</form>
