<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end %>

<h1>Companies</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="font-weight-bold">All companies</h5>

      <div>
        <% @companies.each do |company| %>
          <div>
            <%= link_to company.name, company, { style: 'color: black;', class: "link" } %>
          </div>
        <% end %>
      </div>
    </div>

    <form action="companies/new" method="get">
      <button class="btn btn-primary">Register your own company</button>
    </form>
  </div>
</div>

