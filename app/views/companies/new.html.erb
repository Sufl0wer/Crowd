<h1>Company creation form</h1>

<%= simple_form_for @company do |f|%>
  <div class="form-inputs">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.input_field :name, autofocus: true, required: true %>
    </div>
    <div class="field" style="margin-top: 7px; max-width: 205px">
      <%= f.input :category, :collection => %w(Education Science Medicine Art Gaming Engineering),
                  input_html: { class: 'form-control'}, label: "Branch" %>
    </div>
    <div class="field">
      <%= f.label "Necessary goal" %><br />
      <%= f.input_field :goal, placeholder: "USD", required: true %>
    </div>
    <div class="field">
      <%= f.label "Expiration date" %><br />
      <%= f.input_field :expiration_date, as: :date, html5: true, required: true %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.input_field :description, as: :text, required: true,
                        input_html: { rows: 15 } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>

