<h1>Editing Company</h1>

<%= simple_form_for @company, url: company_path do |f| %>
  <% if @company.errors.any? %>
    <% @company.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  <% end %>

  <div class="form-inputs">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.input_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
      <%= f.label "Necessary goal" %><br />
      <%= f.input_field :goal, placeholder: "USD", autocomplete: "goal" %>
    </div>
    <div class="field">
      <%= f.label :expiration_date %><br />
      <%= f.input_field :expiration_date, as: :date, html5: true, autocomplete: "expiration_date" %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.input_field :description, autocomplete: "description" %>
    </div>
  </div>

  <br />

  <div class="form-actions" style="padding-bottom: 20px">
    <%= f.button :submit, "Edit", class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back', companies_path %>
